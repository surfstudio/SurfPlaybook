# Customise this file, documentation can be found here:
# https://docs.fastlane.tools/actions/
# All available actions: https://docs.fastlane.tools/actions
# can also be listed using the `fastlane actions` command

# Change the syntax highlighting to Ruby
# All lines starting with a # are ignored when running `fastlane`

# If you want to automatically update fastlane if a new version is available:
# update_fastlane

workspace = "SurfPlaybook.xcworkspace"

pod_bundle_id = "ru.surfstudio.playbook.SurfPlaybook"
pod_scheme = "SurfPlaybook"
pod_target = "SurfPlaybook"

example_bundle_id = "ru.surfstudio.playbook.SurfPlaybookExample"
example_scheme = "SurfPlaybookExample"

spm_workspace = "SurfPlaybookSPM.xcworkspace"
spm_example_scheme = "SurfPlaybookSPM"

derived_data_path = "./buildData"

default_platform :ios

platform :ios do

  ENV["FASTLANE_HIDE_CHANGELOG"] = "true"
  ENV["FASTLANE_SKIP_UPDATE_CHECK"] = "true"

  before_all do |lane, options|  
    # ensure_git_status_clean 
  end

  desc "Build Main scheme of Xcode target in Debug configuration"
  desc "Parameters:
  - clean: Pass **true** if you need to clean project before build
  "
  lane :build do |options|
    xcodebuild(
      workspace: workspace,
      scheme: pod_scheme,
      configuration: "Debug",
      clean: options[:clean],
      build: true,
      destination: "generic/platform=iOS\" CODE_SIGNING_REQUIRED=NO CODE_SIGN_IDENTITY=\"",
      xcargs: "-sdk iphonesimulator ONLY_ACTIVE_ARCH=NO build-for-testing",
      derivedDataPath: derived_data_path
    )
  end

  lane :spm_build do |options|
    Dir.chdir("../SPM_Example") do
      xcodebuild(
        workspace: spm_workspace,
        scheme: spm_example_scheme,
        configuration: "Debug",
        clean: options[:clean],
        build: true,
        destination: "generic/platform=iOS\" CODE_SIGNING_REQUIRED=NO CODE_SIGN_IDENTITY=\"",
        xcargs: "-sdk iphonesimulator ONLY_ACTIVE_ARCH=NO build-for-testing",
        derivedDataPath: derived_data_path
      )
    end
  end

  lane :example_build do |options|
    xcodebuild(
      workspace: workspace,
      scheme: example_scheme,
      configuration: "Debug",
      clean: options[:clean],
      build: true,
      destination: "generic/platform=iOS\" CODE_SIGNING_REQUIRED=NO CODE_SIGN_IDENTITY=\"",
      xcargs: "-sdk iphonesimulator ONLY_ACTIVE_ARCH=NO build-for-testing",
      derivedDataPath: derived_data_path
    )
  end

  desc "Run tests"
  lane :tests do
    run_tests(
      devices: ["iPhone 8"],
      scheme: pod_scheme,
      code_coverage: false,
      test_without_building: true,
      skip_build: true,
      derived_data_path: derived_data_path
  )
  end

end